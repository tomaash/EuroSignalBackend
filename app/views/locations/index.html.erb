<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "List")}", locations_path %></li>
      <!--<li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_location_path %></li>-->
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= t("web-app-theme.all", :default => "All") %> Locations</h2>

    <div class="inner">
      <table class="table">
        <tr>
          <th class="first">Lat</th>
          <th>Lng</th>
          <th>Acc</th>
          <th>User</th>
          <th>Task</th>
          <th>Address</th>
          <th>Time</th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @locations.each do |location| -%>
            <tr class="<%= cycle("odd", "even") %>">
              <td>
                <%= location.lat %>
              </td>
              <td>
                <%= location.lng %>
              </td>
              <td>
                <%= location.acc %>
              </td>
              <td>
                <%= location.user.login %>
              </td>
              <td>
                <%= location.task.name %>
              </td>
              <td>
                <%= location.address %>
              </td>
              <td>
                <%= location.created_at %>
              </td>
              <td class="last">
                <%= link_to "#{t("web-app-theme.show", :default => "Show")}", location_path(location) %>
                <%= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_location_path(location) %>
                <%= link_to "#{t("web-app-theme.delete", :default => "Delete")}", location_path(location), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
              </td>
            </tr>
        <% end -%>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>

      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
