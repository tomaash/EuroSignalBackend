<h1>Listing locations</h1>

<table>
  <tr>
    <th>Lat</th>
    <th>Lng</th>
    <th>Acc</th>
    <th>Time</th>
    <th>User</th>
    <th>Task</th>
    <th>Address</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= location.lat %></td>
    <td><%= location.lng %></td>
    <td><%= location.acc %></td>
    <td><%= location.time %></td>
    <td><%= location.user ? location.user.login : "N/A" %></td>
    <td><%= location.task ? location.task.name : "N/A" %></td>
    <td><%= location.address %></td>
    <td><%= link_to 'Show', location %></td>
    <td><%= link_to 'Edit', edit_location_path(location) %></td>
    <td><%= link_to 'Destroy', location, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

