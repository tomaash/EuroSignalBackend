<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>State</th>
    <th>Start date</th>
    <th>Due date</th>
    <th>Owner</th>
    <th>User</th>
    <th>Client</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.state ? task.state.name : "N/A" %></td>
    <td><%= task.start_date %></td>
    <td><%= task.due_date %></td>
    <td><%= task.owner %></td>
    <td><%= task.user ? task.user.login : "N/A" %></td>
    <td><%= task.client %></td>
    <td><%= task.description %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

