<div id="box">
  <div class="block" id="block-login">
    <h2>Eurosignal</h2>
    <div class="content login">
      <% if flash.empty? %>
      <br/>
      <% end %>
      <div class="flash">
        <% flash.each do |type, message| -%>
            <div class="message <%= type %>">
              <p><%= message %></p>
            </div>
        <% end -%>
      </div>

      <%= form_for @user_session, :url => {:action => :auth}, :html => {:class => :form} do |f| %>
          <div class="group wat-cf">
            <div class="left">
              <%= f.label :login, :class => :label %>
            </div>
            <div class="right">
              <%= f.text_field :login, :class => 'text_field' %>
            </div>
            <!--<span class="description">Ex: a simple text</span>-->
          </div>

          <div class="group wat-cf">
            <div class="left">
              <%= f.label :password, :class => :label %>
            </div>
            <div class="right">
              <%= f.password_field :password, :class => 'text_field' %>
            </div>
            <!--<span class="description">Ex: a simple text</span>-->
          </div>
          <div class="group navform wat-cf">
            <div class="right">
              <button class="button" type="submit">
                <img src="/assets/web-app-theme/icons/tick.png" alt="Save"/> Login
              </button>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>